package a2a.foundation;

import java.util.ArrayList;

/**
 * Basic fundamental data structure use to store the user input history.
 * 
 * @author Yu Ang Zhang, Yiming Huang, Yi Jian Wang, Yu Wang
 */
public class InputHistory {

  private ArrayList<String> userInputHistory;

  /**
   * Construct an InputHistory
   */
  public InputHistory() {

    userInputHistory = new ArrayList<>();
  }

  /**
   * Record an user input
   *
   * @param userInput The string which is input by an user
   */
  public void record(String userInput) {

    userInputHistory.add(userInput);
  }

  /**
   * Getter of user input history.
   *
   * @return The stack of user input history
   */
  public ArrayList<String> getUserInputHistory() {

    return userInputHistory;
  }


}
