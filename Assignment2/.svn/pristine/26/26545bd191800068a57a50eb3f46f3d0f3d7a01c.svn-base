package a2a.foundation;

/**
 * The file contains the filename and contents.
 * 
 * @author Yu Ang Zhang
 * @author Yiming Huang
 * @author Yi Jian Wang
 * @author Yu Wang
 * 
 */
public class File {

  // The name of the file
  private String name;

  // The contents of the file
  private String contents;

  // The address of the file
  private String address;

  /**
   * Construct a file.
   *
   * @param name     The name of this file
   * @param contents The contents of this file
   * @param address  The full path of this file
   */
  public File(String name, String contents, String address) {

    this.name = name;
    this.contents = contents;
    this.address = address;
  }

  /**
   * Get the name of the file.
   *
   * @return The name of this file
   */
  public String getName() {

    return name;
  }

  /**
   * Get the contents of the file.
   *
   * @return The contents of this file
   */
  public String getContents() {

    return contents;
  }

  /**
   * Get the address of the file.
   *
   * @return The address of this file
   */
  public String getAddress() {

    return address;
  }

  /**
   * Update the name of the file.
   *
   * @param name The new name of this file
   */
  public void setName(String name) {

    this.name = name;
  }

  /**
   * Update the contents of the file.
   *
   * @param contents The new contents of this file
   */
  public void setContents(String contents) {

    this.contents = contents;
  }

  /**
   * Update the address of the file.
   *
   * @param address The new address of this file
   */
  public void setAddress(String address) {

    this.address = address;
  }

}
