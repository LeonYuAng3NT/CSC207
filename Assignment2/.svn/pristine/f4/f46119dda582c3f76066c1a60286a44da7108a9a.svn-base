package a2a.exceptions;

/**
 * An Invalid Target Name Exception happened whenever an user
 * attempt to execute command which relate to the operation of
 * a file or directory and it contains an invalid target name as
 * the argument.
 *
 * @author Yi Jian Wang
 */
public class InvalidTargetNameException extends Exception{

  /**
   * Construct an InvalidTargetNameException.
   *
   * @param targetName The target name which cause the exception
   */
  public InvalidTargetNameException(String targetName) {

    super("Unfortunately, the name: " + targetName + " is not allowed");
  }
}
