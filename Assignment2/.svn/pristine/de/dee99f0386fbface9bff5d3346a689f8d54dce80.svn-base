package test;

import a2a.operator.PathAnalyzer;
import org.junit.Test;

import java.util.ArrayList;
import java.util.Arrays;

import static org.junit.Assert.assertEquals;
import static org.junit.Assert.fail;

/**
 * An argument analyzer test, uses to test if the methods are working as they
 * describe.
 * 
 * @author Yu Ang Zhang
 * @author Yiming Huang
 * @author Yi Jian Wang
 */
public class PathAnalyzerTest {
  /**
   * Test if an instance can be successful created.
   */
  @Test
  public void testArgumentAnalyzer() {

    try {
      new PathAnalyzer("/ad");
    } catch (Exception e) {
      fail("failed to create instance of path analyzer.");
    }
  }

  /**
   * Test if Convert method can be functioned as it describes.
   */
  @Test
  public void testConvert() {

    PathAnalyzer analyzer = new PathAnalyzer("/desktop/csc207/assignment2/");
    String[] output = analyzer.convert();
    ArrayList<String> list = new ArrayList<>();
    for (int i = 0; i < output.length; i++) {
      list.add(output[i]);
    }
    assertEquals(list, Arrays.asList("/", "desktop", "csc207", "assignment2"));
  }

}
